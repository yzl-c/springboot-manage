<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="owner.yuzl.manage.mapper.SysUserMapper">
    <!--列表查询-->
    <select id="getPage" parameterType="java.util.Map" resultType="SysUserPO">
        SELECT tsu.id id,
               tsu.account account,
               tsu.name name
          FROM T_SYS_USER tsu
        <where>
            <if test="account != null and account != ''">
                AND INSTR(tsu.account, #{account}) > 0
            </if>
            <if test="name != null and name != ''">
                AND INSTR(tsu.name,#{name}) > 0
            </if>
        </where>
        <if test="currentBeginIndex != null and pageSize != null">
            limit #{currentBeginIndex}, #{pageSize}
        </if>
    </select>

    <!--总量查询-->
    <select id="countTotal" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM T_SYS_USER tsu
        <where>
            <if test="account != null and account != ''">
                AND INSTR(tsu.account, #{account}) > 0
            </if>
            <if test="name != null and name != ''">
                AND INSTR(tsu.name,#{name}) > 0
            </if>
        </where>
    </select>

    <!--插入-->
    <insert id="create" parameterType="SysUserPo">
        INSERT INTO T_SYS_USER
        (id, account, name, password)
        VALUES
        (null, #{account}, #{name}, #{password})
    </insert>
</mapper>